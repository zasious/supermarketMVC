<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Order #<%= order.id %></title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <%- include('partials/flashMessages', { errorMessages: errorMessages, successMessages: successMessages }) %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-0">Order #<%= order.id %></h2>
        <div class="text-muted">Placed: <%= new Date(order.created_at).toLocaleString() %></div>
      </div>
      <button class="btn btn-outline-secondary" onclick="window.print()">Print</button>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title mb-3">Customer</h5>
        <div><strong>Name:</strong> <%= order.user.username %></div>
        <div><strong>Email:</strong> <%= order.user.email %></div>
        <div><strong>User ID:</strong> <%= order.user.id %></div>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title mb-3">Items</h5>
        <ul class="list-group list-group-flush">
          <% order.items.forEach(function(item) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
              <div class="flex-grow-1">
                <div class="fw-semibold"><%= item.productName %></div>
                <small class="text-muted">Qty: <%= item.quantity %> @ $<%= Number(item.price).toFixed(2) %></small>
              </div>
              <div class="fw-semibold">$<%= Number(item.price * item.quantity).toFixed(2) %></div>
            </li>
          <% }); %>
        </ul>
      </div>
      <div class="card-footer d-flex justify-content-end">
        <div class="fw-semibold fs-5">Total: $<%= Number(order.total_amount).toFixed(2) %></div>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3">Reviews</h5>
        <% if (order.items && order.items.length) { %>
          <div class="row g-3">
            <% order.items.forEach(function(item) { 
                 const productReviews = (reviews || []).filter(r => r.product_id === item.product_id);
                 const myReviewForItem = productReviews.find(r => r.user_id === order.user.id);
            %>
              <div class="col-12 col-md-6">
                <div class="border rounded p-3 h-100">
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="fw-semibold"><%= item.productName %></div>
                    <% if (myReviewForItem) { %>
                      <span class="badge bg-success">Your review</span>
                    <% } %>
                  </div>
                  <% if (productReviews && productReviews.length) { %>
                    <ul class="list-group list-group-flush mb-2">
                      <% productReviews.forEach(function(r) { %>
                        <li class="list-group-item px-0">
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="fw-semibold"><%= r.username %></div>
                            <div class="text-warning">
                              <% for (let i = 0; i < r.rating; i++) { %>★<% } %>
                              <% for (let i = r.rating; i < 5; i++) { %>☆<% } %>
                            </div>
                          </div>
                          <div class="text-muted"><small><%= new Date(r.created_at).toLocaleString() %></small></div>
                          <p class="mb-0 mt-1"><%= r.comment %></p>
                        </li>
                      <% }); %>
                    </ul>
                  <% } else { %>
                    <div class="text-muted mb-2">No reviews yet.</div>
                  <% } %>

                  <form method="POST" action="/orders/<%= order.id %>/reviews">
                    <input type="hidden" name="productId" value="<%= item.product_id %>">
                    <div class="mb-2">
                      <label class="form-label">Rating</label>
                      <select name="rating" class="form-select form-select-sm" required>
                        <option value="">Select...</option>
                        <option value="5" <%= myReviewForItem && myReviewForItem.rating === 5 ? 'selected' : '' %>>★★★★★ (5)</option>
                        <option value="4" <%= myReviewForItem && myReviewForItem.rating === 4 ? 'selected' : '' %>>★★★★☆ (4)</option>
                        <option value="3" <%= myReviewForItem && myReviewForItem.rating === 3 ? 'selected' : '' %>>★★★☆☆ (3)</option>
                        <option value="2" <%= myReviewForItem && myReviewForItem.rating === 2 ? 'selected' : '' %>>★★☆☆☆ (2)</option>
                        <option value="1" <%= myReviewForItem && myReviewForItem.rating === 1 ? 'selected' : '' %>>★☆☆☆☆ (1)</option>
                      </select>
                    </div>
                    <div class="mb-2">
                      <label class="form-label">Comment</label>
                      <textarea name="comment" class="form-control form-control-sm" rows="2" placeholder="Share your experience"><%= myReviewForItem ? myReviewForItem.comment : '' %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm"><%= myReviewForItem ? 'Update Review' : 'Submit Review' %></button>
                  </form>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-muted mb-3">No items found.</div>
        <% } %>
      </div>
    </div>

    <div class="d-flex gap-2 mb-4">
      <% if (fromCheckout) { %>
        <a href="/" class="btn btn-secondary">Back to Shopping</a>
      <% } else { %>
        <a href="/orders" class="btn btn-outline-secondary">Back to My Orders</a>
      <% } %>
      <a href="/shopping" class="btn btn-outline-secondary">Back to Shopping</a>
    </div>
  </div>
</body>
</html>
