<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Your Orders</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h2 class="mb-4">My Orders</h2>
    <% if (!orders || !orders.length) { %>
      <div class="alert alert-info">You have no orders yet.</div>
    <% } else { %>
      <div class="row g-3">
        <% orders.forEach(function(order) { %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm h-100 order-card">
              <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                  <div class="fw-semibold">Order #<%= order.id %></div>
                  <small class="text-muted">Placed: <%= new Date(order.created_at).toLocaleString() %></small>
                </div>
                <div class="text-end">
                  <div class="fw-semibold">Total: $<%= Number(order.total_amount).toFixed(2) %></div>
                  <span class="badge bg-secondary"><%= order.items.length %> item<%= order.items.length === 1 ? '' : 's' %></span>
                  <div class="mt-2">
                    <a class="btn btn-sm btn-outline-primary" href="/orders/<%= order.id %>">View / Print</a>
                  </div>
                </div>
              </div>
              <ul class="list-group list-group-flush order-items" style="max-height: 220px; overflow:auto;">
                <% order.items.forEach(function(item) { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <div class="flex-grow-1">
                      <div class="fw-semibold"><%= item.productName %></div>
                      <small class="text-muted">Qty: <%= item.quantity %> @ $<%= Number(item.price).toFixed(2) %></small>
                    </div>
                    <div class="fw-semibold">$<%= Number(item.price * item.quantity).toFixed(2) %></div>
                  </li>
                <% }); %>
              </ul>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
  <style>
    .order-card {
      min-height: 260px;
    }
  </style>
</body>
</html>
