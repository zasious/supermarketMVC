<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>All Orders</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h2 class="mb-4">Customer Orders</h2>
    <% if (!orders || !orders.length) { %>
      <div class="alert alert-info">No orders yet.</div>
    <% } else { %>
      <div class="row g-3">
        <% orders.forEach(function(order) { %>
          <div class="col-12">
            <div class="card shadow-sm">
              <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                  <div class="fw-semibold">Order #<%= order.id %></div>
                  <small class="text-muted">Placed: <%= new Date(order.created_at).toLocaleString() %></small>
                </div>
                <div class="text-end">
                  <div class="fw-semibold">Total: $<%= Number(order.total_amount).toFixed(2) %></div>
                  <span class="badge bg-secondary"><%= order.items.length %> item<%= order.items.length === 1 ? '' : 's' %></span>
                </div>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <div class="fw-semibold">Customer</div>
                  <div><%= order.user.username %> (<%= order.user.email %>)</div>
                  <small class="text-muted">User ID: <%= order.user.id %></small>
                </div>
                <h6 class="mt-3">Items</h6>
                <ul class="list-group list-group-flush mb-3">
                  <% order.items.forEach(function(item) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <div class="flex-grow-1">
                        <div class="fw-semibold"><%= item.productName %></div>
                        <small class="text-muted">Qty: <%= item.quantity %> @ $<%= Number(item.price).toFixed(2) %></small>
                      </div>
                      <div class="fw-semibold">$<%= Number(item.price * item.quantity).toFixed(2) %></div>
                    </li>
                  <% }); %>
                </ul>

                <h6>Reviews</h6>
                <% if (order.reviews && order.reviews.length) { %>
                  <ul class="list-group list-group-flush">
                    <% order.reviews.forEach(function(r) { %>
                      <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="fw-semibold"><%= r.username %></div>
                          <div class="text-warning">
                            <% for (let i = 0; i < r.rating; i++) { %>★<% } %>
                            <% for (let i = r.rating; i < 5; i++) { %>☆<% } %>
                          </div>
                        </div>
                        <div class="text-muted"><small><%= new Date(r.created_at).toLocaleString() %></small></div>
                        <p class="mb-0 mt-2"><%= r.comment %></p>
                      </li>
                    <% }); %>
                  </ul>
                <% } else { %>
                  <div class="text-muted">No reviews yet.</div>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
