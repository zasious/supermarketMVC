<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    .product-card { min-height: 400px; }
    .product-card .card-img-top {
      height: 180px;
      object-fit: contain;
      padding: 12px;
    }
    @media (min-width: 992px) {
      .product-card { min-height: 430px; }
      .product-card .card-img-top { height: 200px; }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container">
    <% if (user) { %>
      <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <% } %>
    <br>
    <div class="text-center"><h2>Products from Supermarket</h2></div>
    <form class="row g-2 my-3" method="GET" action="/shopping">
      <div class="col-sm-8 col-md-6">
        <input type="text" class="form-control" name="q" placeholder="Search by name or category" value="<%= search || '' %>">
      </div>
      <div class="col-auto">
        <button class="btn btn-primary">Search</button>
      </div>
      <% if (search) { %>
        <div class="col-auto align-self-center text-muted">
          Showing results for "<%= search %>"
        </div>
      <% } %>
    </form>
    <div class="row">
      <% if (products && products.length > 0) { %>
        <% products.forEach(function(product) { %>
          <div class="col-12 col-md-6 col-lg-4 mb-4">
            <a href="/product/<%= product.id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm product-card">
              <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.productName %></h5>
                <p class="card-text text-muted mb-1">Category: <%= product.category || 'General' %></p>
                <% if (product.avgRating) { %>
                  <div class="text-warning small mb-1">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <%= i <= Math.round(product.avgRating) ? '★' : '☆' %>
                    <% } %>
                    <span class="text-muted">(<%= product.reviewCount %>)</span>
                  </div>
                <% } else { %>
                  <div class="text-muted small mb-1">No reviews yet</div>
                <% } %>
                <p class="card-text fw-semibold mb-2">$<%= Number(product.price).toFixed(2) %></p>
                <p class="card-text text-muted mb-2">In stock: <%= product.quantity %></p>
                <% if (user && user.role === 'admin') { %>
                  <div class="d-flex gap-2 align-items-center mt-auto">
                    <a href="/products/update/<%= product.id %>" class="btn btn-outline-primary btn-sm">Edit</a>
                    <a href="/inventory" class="btn btn-outline-secondary btn-sm">Inventory</a>
                  </div>
                <% } else { %>
                  <% if (product.quantity > 0) { %>
                    <form method="POST" action="/cart/add" novalidate class="d-flex gap-2 align-items-center mt-auto add-to-cart-form">
                      <input type="hidden" name="productId" value="<%= product.id %>">
                      <input type="number" name="quantity" value="1" min="1" max="<%= product.quantity %>" class="form-control" style="width:80px">
                      <button type="submit" class="btn btn-primary">Add to cart</button>
                    </form>
                  <% } else { %>
                    <div class="mt-auto">
                      <button class="btn btn-secondary w-100" disabled>Out of stock</button>
                    </div>
                  <% } %>
                <% } %>
              </div>
            </div>
            </a>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <p>No products available.</p>
        </div>
      <% } %>
    </div>
  </div>
  <div id="cart-toast" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100; display:none;">
    <div id="cart-toast-inner" class="toast align-items-center text-bg-success border-0 show">
      <div class="d-flex">
        <div class="toast-body">Added to cart</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" aria-label="Close" onclick="hideToast()"></button>
      </div>
    </div>
  </div>
  <script>
    function showToast(message, type) {
      const toast = document.getElementById('cart-toast');
      const inner = document.getElementById('cart-toast-inner');
      inner.classList.remove('text-bg-success', 'text-bg-danger');
      inner.classList.add(type === 'error' ? 'text-bg-danger' : 'text-bg-success');
      toast.querySelector('.toast-body').textContent = message || 'Added to cart';
      toast.style.display = 'block';
      setTimeout(() => { toast.style.display = 'none'; }, 1800);
    }
    function hideToast() {
      const toast = document.getElementById('cart-toast');
      toast.style.display = 'none';
    }

    document.querySelectorAll('.add-to-cart-form').forEach(form => {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        const formData = new FormData(form);
        const qty = Number(formData.get('quantity'));
        if (!Number.isFinite(qty) || qty <= 0) {
          showToast('Quantity must be at least 1', 'error');
          return;
        }
        fetch(form.action, {
          method: 'POST',
          headers: {
            'X-Requested-With': 'XMLHttpRequest',
            'Accept': 'application/json'
          },
          body: new URLSearchParams(formData)
        })
        .then(async (res) => {
          let data = {};
          try { data = await res.json(); } catch (e) { /* ignore parse errors */ }
          if (res.ok && data.success) {
            showToast('Added to cart', 'success');
          } else {
            showToast((data && data.message) || 'Unable to add to cart', 'error');
          }
        })
        .catch(() => showToast('Unable to add to cart', 'error'));
      });
    });
  </script>
</body>
</html>
