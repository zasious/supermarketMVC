<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Users</title>
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Users</h3>
      <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm">Back to Dashboard</a>
    </div>
    <div class="card">
      <div class="card-body p-0">
        <table class="table mb-0 table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th>Contact</th>
              <th>Address</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length) { %>
              <% users.forEach(function(u) { %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.username %></td>
                  <td><%= u.email %></td>
                  <td><span class="badge <%= u.role === 'admin' ? 'bg-primary' : 'bg-secondary' %>"><%= u.role %></span></td>
                  <td><%= u.contact %></td>
                  <td><%= u.address %></td>
                  <td class="text-end">
                    <form method="POST" action="/admin/users/<%= u.id %>/delete" onsubmit="return confirm('Delete this user?');" style="margin:0;">
                      <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr><td colspan="7" class="text-center text-muted p-3">No users found</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
