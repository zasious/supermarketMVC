<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>
  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Shopping Cart</h2>
    <% if (errorMessages && errorMessages.length) { %>
      <div class="alert alert-danger">
        <%= errorMessages.join('<br>') %>
      </div>
    <% } %>
    <% if (successMessages && successMessages.length) { %>
      <div class="alert alert-success">
        <%= successMessages.join('<br>') %>
      </div>
    <% } %>
    <% if (!items || !items.length) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <div class="row g-3">
        <div class="col-12">
          <div class="form-check mb-2">
            <input type="checkbox" class="form-check-input" id="selectAll">
            <label class="form-check-label" for="selectAll">Select all</label>
          </div>
        </div>
        <% items.forEach(function(item){ %>
          <div class="col-12">
            <div class="card shadow-sm w-100 mb-0 cart-card" style="cursor:pointer;" data-product="<%= item.product_id %>" data-price="<%= item.price %>" data-qty="<%= item.quantity %>">
              <input type="checkbox" class="form-check-input item-select d-none" value="<%= item.product_id %>">
              <div class="card-body">
                <div class="d-flex align-items-center flex-wrap gap-3">
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input item-select proxy-checkbox" value="<%= item.product_id %>">
                  </div>
                  <img src="/images/<%= item.image %>" width="80" class="img-thumbnail" alt="<%= item.productName %>">
                  <div class="flex-grow-1">
                    <h6 class="mb-1"><%= item.productName %></h6>
                    <div class="text-muted">Price: $<%= item.price.toFixed(2) %></div>
                    <div class="text-muted">In stock: <%= item.stock %></div>
                  </div>
                  <div>
                    <div class="d-flex flex-column gap-2 align-items-start">
                      <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-danger btn-sm qty-btn" data-delta="-1" data-product="<%= item.product_id %>" data-max="<%= item.stock %>">-</button>
                        <input type="number" class="form-control form-control-sm text-center qty-input no-spinners" style="width:90px" value="<%= item.quantity %>" min="0" max="<%= item.stock %>" data-product="<%= item.product_id %>">
                        <button class="btn btn-success btn-sm qty-btn" data-delta="1" data-product="<%= item.product_id %>" data-max="<%= item.stock %>">+</button>
                      </div>
                      <small class="text-muted">Line total: $<%= (item.price * item.quantity).toFixed(2) %></small>
                    </div>
                  </div>
                  <form method="POST" action="/cart/remove" class="ms-auto">
                    <input type="hidden" name="productId" value="<%= item.product_id %>">
                    <button class="btn btn-outline-danger btn-sm">Remove</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="card mt-4">
        <div class="card-body d-flex flex-wrap justify-content-between align-items-center gap-3">
          <div>
            <h5 class="mb-1">Selected total</h5>
            <div class="fs-5" id="selectedTotal">$<%= (grandTotal || 0).toFixed(2) %></div>
          </div>
          <div class="d-flex flex-wrap gap-2">
            <form method="POST" action="/cart/clear">
              <button class="btn btn-outline-danger btn-sm">Clear</button>
            </form>
            <button class="btn btn-success" id="checkoutSelected">Checkout Selected</button>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <a href="/" class="btn btn-secondary">Back to Shopping</a>
      </div>
    <% } %>
  </div>
  <style>
    /* hide number input arrows */
    .no-spinners::-webkit-outer-spin-button,
    .no-spinners::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    .no-spinners {
      -moz-appearance: textfield;
    }
  </style>
  <script>
    (function() {
      function sendUpdate(productId, qty) {
        fetch('/cart/update', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ productId, quantity: qty })
        }).then(() => window.location.reload())
          .catch(() => window.location.reload());
      }

      function checkoutSelected() {
        const selected = Array.from(document.querySelectorAll('.item-select:checked'))
          .map(cb => Number(cb.value))
          .filter(v => !Number.isNaN(v));
        if (!selected.length) {
          alert('Please select at least one item to checkout.');
          return;
        }
        fetch('/cart/checkout', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'Accept': 'application/json', 'X-Requested-With': 'XMLHttpRequest' },
          body: JSON.stringify({ selectedProducts: selected })
        }).then(async (res) => {
          let data = {};
          try { data = await res.json(); } catch (e) { /* ignore */ }
          if (res.ok && data && data.redirect) {
            window.location = data.redirect;
          } else if (res.ok) {
            window.location.reload();
          } else {
            alert((data && data.message) || 'Checkout failed');
          }
        }).catch(() => window.location.reload());
      }

      document.querySelectorAll('.qty-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          const delta = Number(btn.dataset.delta);
          const productId = Number(btn.dataset.product);
          const max = Number(btn.dataset.max);
          const card = btn.closest('.cart-card');
          const input = card && card.querySelector('.qty-input[data-product="' + productId + '"]');
          if (!input) return;
          let newQty = Number(input.value) + delta;
          newQty = Math.max(0, Math.min(max, newQty));
          input.value = newQty;
          sendUpdate(productId, newQty);
        });
      });

      document.querySelectorAll('.qty-input').forEach(input => {
        input.addEventListener('change', () => {
          const max = Number(input.max || input.dataset.max || Infinity);
          const productId = Number(input.dataset.product);
          let newQty = Number(input.value) || 0;
          newQty = Math.max(0, Math.min(max, newQty));
          input.value = newQty;
          sendUpdate(productId, newQty);
        });
      });

      const selectAll = document.getElementById('selectAll');
      if (selectAll) {
        selectAll.addEventListener('change', () => {
          const checked = selectAll.checked;
          document.querySelectorAll('.proxy-checkbox').forEach(cb => {
            cb.checked = checked;
            const hidden = cb.closest('.cart-card').querySelector('.item-select');
            if (hidden) hidden.checked = checked;
          });
          updateSelectedTotal();
        });
      }

      document.querySelectorAll('.proxy-checkbox').forEach(cb => {
        cb.addEventListener('change', (e) => {
          const card = cb.closest('.cart-card');
          const hidden = card && card.querySelector('.item-select.d-none');
          if (hidden) hidden.checked = cb.checked;
          e.stopPropagation();
          updateSelectedTotal();
        });
      });

      document.querySelectorAll('.cart-card').forEach(card => {
        card.addEventListener('click', (e) => {
          if (e.target.closest('button') || e.target.closest('input[type="number"]') || e.target.closest('form') || e.target.closest('.proxy-checkbox')) {
            return;
          }
          const proxy = card.querySelector('.proxy-checkbox');
          const hidden = card.querySelector('.item-select.d-none');
          if (!proxy) return;
          const newState = !proxy.checked;
          proxy.checked = newState;
          if (hidden) hidden.checked = newState;
          updateSelectedTotal();
        });
      });

      const checkoutBtn = document.getElementById('checkoutSelected');
      if (checkoutBtn) {
        checkoutBtn.addEventListener('click', (e) => {
          e.preventDefault();
          checkoutSelected();
        });
      }

      function updateSelectedTotal() {
        let total = 0;
        document.querySelectorAll('.cart-card').forEach(card => {
          const proxy = card.querySelector('.proxy-checkbox');
          if (proxy && proxy.checked) {
            const price = Number(card.dataset.price) || 0;
            const qty = Number(card.dataset.qty) || 0;
            total += price * qty;
          }
        });
        const totalEl = document.getElementById('selectedTotal');
        if (totalEl) {
          totalEl.textContent = '$' + total.toFixed(2);
        }
      }

      updateSelectedTotal();
    })();
  </script>
</body>
</html>
