<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
    <%- include('partials/navbar') %>

  <div class="container mt-4">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
      <h2 class="mb-0">Inventory</h2>
      <form class="d-flex align-items-center gap-2" method="GET" action="/inventory">
        <input type="text" class="form-control" name="q" placeholder="Search by name or category" value="<%= search || '' %>" style="width:220px">
        <button class="btn btn-primary btn-sm">Search</button>
      </form>
    </div>

    <div class="row g-3">
      <% if (products && products.length) { %>
        <% products.forEach(function(product) { %>
          <div class="col-lg-3 col-md-4 col-sm-6">
            <a href="/product/<%= product.id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm inventory-card">
              <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.productName %></h5>
                <p class="card-text mb-1 text-muted">Category: <%= product.category || 'General' %></p>
                <% if (product.avgRating) { %>
                  <div class="text-warning small mb-1">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <%= i <= Math.round(product.avgRating) ? '★' : '☆' %>
                    <% } %>
                    <span class="text-muted">(<%= product.reviewCount %>)</span>
                  </div>
                <% } else { %>
                  <div class="text-muted small mb-1">No reviews yet</div>
                <% } %>
                <p class="card-text mb-1">Stock: <strong><%= product.quantity %></strong></p>
                <p class="card-text fw-semibold">$<%= product.price.toFixed(2) %></p>
                <div class="mt-auto d-flex gap-2">
                  <a href="/products/update/<%= product.id %>" class="btn btn-outline-primary btn-sm">Edit</a>
                  <form method="POST" action="/products/delete/<%= product.id %>" onsubmit="return confirm('Delete this product?');">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            </div>
            </a>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info">No products found.</div>
        </div>
      <% } %>
    </div>
  </div>
  <style>
    .inventory-card { min-height: 360px; }
    .inventory-card .card-img-top {
      height: 160px;
      object-fit: contain;
      padding: 10px;
    }
    @media (min-width: 992px) {
      .inventory-card { min-height: 400px; }
      .inventory-card .card-img-top { height: 180px; }
    }
  </style>
</body>
</html>
