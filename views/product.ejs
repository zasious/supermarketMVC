<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App</title>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <div class="row g-4">
          <div class="col-md-5">
            <div class="card shadow-sm">
              <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
              <div class="card-body">
                <h3 class="card-title"><%= product.productName %></h3>
                <p class="text-muted mb-1">Category: <%= product.category || 'General' %></p>
                <p class="fw-semibold fs-5">$<%= Number(product.price).toFixed(2) %></p>
                <p class="text-muted mb-2">In stock: <%= product.quantity %></p>
                <% if (user && user.role === 'admin') { %>
                  <a href="/products/update/<%= product.id %>" class="btn btn-outline-primary btn-sm">Edit Product</a>
                <% } else { %>
                  <% if (product.quantity > 0) { %>
                    <form method="POST" action="/cart/add" class="d-flex gap-2 align-items-center">
                      <input type="hidden" name="productId" value="<%= product.id %>">
                      <input type="number" name="quantity" value="1" min="1" max="<%= product.quantity %>" class="form-control form-control-sm" style="width:100px">
                      <button type="submit" class="btn btn-primary btn-sm">Add to cart</button>
                    </form>
                  <% } else { %>
                    <button class="btn btn-secondary btn-sm" disabled>Out of stock</button>
                  <% } %>
                  <a href="/shopping" class="btn btn-outline-secondary btn-sm">Back to Shopping</a>
                <% } %>
              </div>
            </div>
          </div>
          <div class="col-md-7">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h5 class="card-title mb-3">Reviews</h5>
                <% if (reviews && reviews.length) { %>
                  <ul class="list-group list-group-flush">
                    <% reviews.forEach(function(r) { %>
                      <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="fw-semibold"><%= r.username %></div>
                          <div class="text-warning">
                            <% for (let i = 0; i < r.rating; i++) { %>★<% } %>
                            <% for (let i = r.rating; i < 5; i++) { %>☆<% } %>
                          </div>
                        </div>
                        <div class="text-muted"><small><%= new Date(r.created_at).toLocaleString() %></small></div>
                        <p class="mb-0 mt-2"><%= r.comment %></p>
                      </li>
                    <% }); %>
                  </ul>
                <% } else { %>
                  <div class="text-muted">No reviews yet.</div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
    </div>
    
</body>
</html>
