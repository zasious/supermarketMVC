<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Admin Dashboard</title>
  <style>
    .hero {
      background: linear-gradient(90deg, #5b5be7, #7c83ff);
      color: #fff;
      border-radius: 12px;
      padding: 24px;
      margin-bottom: 24px;
    }
    .stat-card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    }
    .stat-card .icon {
      width: 36px;
      height: 36px;
      border-radius: 10px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: rgba(91,91,231,0.1);
      color: #5b5be7;
      margin-bottom: 8px;
    }
    .table-card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container mt-4">
    <div class="hero d-flex justify-content-between align-items-center flex-wrap">
      <div>
        <h3 class="mb-1">Admin Dashboard</h3>
        <div class="text-light">Overview of store performance</div>
      </div>
      <div class="d-flex gap-2">
        <a href="/inventory" class="btn btn-light btn-sm text-primary">Manage Inventory</a>
        <a href="/admin/orders" class="btn btn-outline-light btn-sm">View Orders</a>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-12 col-md-6 col-lg-3">
        <a class="text-decoration-none text-dark" href="/inventory">
        <div class="card stat-card h-100 p-3">
          <div class="icon bg-light"><span>ðŸ“¦</span></div>
          <div class="fw-semibold text-muted">Inventory</div>
          <div class="fs-3 fw-bold"><%= stats.inventoryCount %></div>
          <div class="text-muted small">Total products</div>
        </div>
        </a>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <a class="text-decoration-none text-dark" href="/admin/users">
        <div class="card stat-card h-100 p-3">
          <div class="icon bg-light"><span>ðŸ‘¥</span></div>
          <div class="fw-semibold text-muted">Users</div>
          <div class="fs-3 fw-bold"><%= stats.userCount %></div>
          <div class="text-muted small">Registered users</div>
        </div>
        </a>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card stat-card h-100 p-3">
          <div class="icon bg-light"><span>ðŸ’°</span></div>
          <div class="fw-semibold text-muted">Revenue</div>
          <div class="fs-3 fw-bold">$<%= Number(stats.revenue || 0).toFixed(2) %></div>
          <div class="text-muted small">Total sales</div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <a class="text-decoration-none text-dark" href="/admin/orders">
        <div class="card stat-card h-100 p-3">
          <div class="icon bg-light"><span>ðŸ§¾</span></div>
          <div class="fw-semibold text-muted">Orders</div>
          <div class="fs-3 fw-bold"><%= stats.orderCount %></div>
          <div class="text-muted small">All time</div>
        </div>
        </a>
      </div>
    </div>

    <div class="card table-card">
      <div class="card-header bg-white">
        <h5 class="mb-0">Recent Orders</h5>
      </div>
      <div class="card-body p-0">
        <table class="table mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th>Order #</th>
              <th>Customer</th>
              <th>Date</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <% if (recentOrders && recentOrders.length) { %>
              <% recentOrders.forEach(function(o) { %>
                <tr>
                  <td><a href="/orders/<%= o.id %>" class="text-decoration-none">#<%= o.id %></a></td>
                  <td><%= o.username %></td>
                  <td><%= new Date(o.created_at).toLocaleString() %></td>
                  <td>$<%= Number(o.total_amount).toFixed(2) %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="4" class="text-center text-muted p-3">No recent orders</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
